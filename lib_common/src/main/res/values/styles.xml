<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="common_Light" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowMinWidthMajor">65%</item>
        <item name="android:windowMinWidthMinor">83%</item>
        <item name="android:actionModeBackground">@color/common_color_212121</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/common_MDWindowAnimation</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="common_ProgressDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowMinWidthMajor">65%</item>
        <item name="android:windowMinWidthMinor">83%</item>
        <item name="android:actionModeBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/common_MDWindowAnimation</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="common_MDWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_popup_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_popup_exit</item>
    </style>

    <style name="common_AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/common_colorWhite</item>
        <item name="colorPrimaryDark">@color/common_transparent</item>
        <item name="colorAccent">@color/common_colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>