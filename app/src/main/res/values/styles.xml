<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@drawable/splash</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Splash" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@null</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="common_button" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/select_common_btn</item>
        <item name="android:textColor">@drawable/select_common_btn_text</item>
    </style>



    <style name="common_input_bottom_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/color_cccccc</item>

    </style>

    <style name="common_edit_view_style">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/color_999999</item>
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>

    </style>

    <style name="TipsDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <style name="face_item_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dp_23</item>
        <item name="android:layout_marginRight">@dimen/dp_23</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:orientation">vertical</item>
    </style>


    <style name="face_item_text">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/auth_item_height</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:paddingTop">@dimen/dp_7</item>
        <item name="android:paddingBottom">@dimen/dp_7</item>
        <item name="android:background">@drawable/bg_shape_r50</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>

    <style name="confirm_input_sty" parent="edit_view_style">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_shape_r50</item>

    </style>
    <style name="dia_com_anim" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/anim_dialog_common_in</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_common_out</item>
    </style>

    <style name="auth_item_des_text_style">
        <item name="android:textColor">@color/color_999999</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="edit_view_style">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/color_999999</item>
        <item name="android:textColor">@color/color_333333</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>

    </style>


    <style name="contact_title_line_sty">
        <item name="android:layout_width">4dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:background">@drawable/bg_view_black_r2</item>

    </style>



</resources>
